{
  "name": "sketch-viewer",
  "scripts": {
    "clean": "rm -rf dist",
    "start:dev": "cross-env NODE_ENV=development concurrently \"npm run build:dev\" \"wait-on http://localhost:8080/main.js && electron .\"",
    "build:dev": "nollup -c --hot",
    "test:dev": "mocha-istanbul-ui test/setup.js",
    "start": "cross-env NODE_ENV=production npm run build && electron .",
    "build": "npm run clean && rollup -c && cp index.html dist/",
    "test": "mocha-istanbul-ui test/setup.js \"test/**/*.js\" --console --once"
  },
  "dependencies": {
    "bplist-parser": "^0.1.1",
    "dropdown-interface": "^0.1.1",
    "electron": "^1.8.3",
    "electron-context-menu": "^0.9.1",
    "jszip": "^3.1.5",
    "paper": "^0.12.0",
    "preact": "^8.2.5",
    "preact-portal": "^1.1.3"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "mocha-istanbul-ui": "0.0.8",
    "node-sass": "^4.11.0",
    "nollup": "^0.5.1",
    "rollup": "^1.2.3",
    "rollup-plugin-buble": "^0.19.6",
    "rollup-plugin-glob-import": "^0.3.1",
    "rollup-plugin-hot-css": "0.0.4",
    "rollup-plugin-node-resolve": "^4.0.1",
    "wait-on": "^3.2.0"
  }
}
